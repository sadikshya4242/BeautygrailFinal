{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"]
  },
  "include": [
    "tests/**/*.ts",
    "support/**/*.ts",
    "locators/**/*.ts",
    "playwright.config.ts"
  ]
}
